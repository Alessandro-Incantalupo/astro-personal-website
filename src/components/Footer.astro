---
import {SITE_CREATOR} from "../config";
const today = new Date();
const {gitHubUrl} = Astro.props;
---

<footer class="footer footer-center block mb-5 pt-10s">
    <div class="pb-2">
        &copy; {today.getFullYear()} {SITE_CREATOR}
    </div>
    <div class="inline opacity-75">
        Developed by <a href={gitHubUrl} target="_blank" class="font-bold">{SITE_CREATOR}</a>
        <!--using-->
        <!--<a href="https://docs.astro.build/en" target="_blank" class="font-bold">Astro</a>-->
    </div>

</footer>
